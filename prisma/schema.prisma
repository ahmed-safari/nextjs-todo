generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TodoList {
  id        Int        @id @default(autoincrement())
  code      String     @unique
  title     String?
  todoItems TodoItem[]
}

model TodoItem {
  id         Int      @id @default(autoincrement())
  text       String
  isDeleted  Boolean  @default(false)
  isChecked  Boolean  @default(false)
  todoList   TodoList @relation(fields: [todoListId], references: [id])
  todoListId Int
}
